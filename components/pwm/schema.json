{
  "title": "PWM Component Definition",
  "description": "A PWM WipperSnapper component for use in Adafruit IO",
  "type": "object",
  "required": [ "displayName", "frequency"],
  "additionalProperties": false,
  "properties": {
    "displayName": {
      "description": "The human-friendly name of this component.",
      "type": "string",
      "minLength": 3,
      "maxLength": 24
    },
    "frequency": {
      "description": "The component's pulse-width modulation setting. Either fixed (variable duty cycle) or variable (fixed duty cycle)",
      "type": "string",
      "pattern": "^(fixed|variable)$"
    },
    "visualization": {
      "description": "Specifies which visual component to use in the WipperSnapper interface and how to configure it",
      "type": "object",
      "discriminator": { "propertyName": "type" },
      "required": ["type"],
      "oneOf": [{
        "properties": {
          "type": { "const": "switch" },
          "offLabel": { "type": "string" },
          "offIcon": { "type": "string" },
          "onLabel": { "type": "string" },
          "onIcon": { "type": "string" }
        },
        "additionalProperties": false
      }, {
        "properties": {
          "type": { "const": "button" },
          "pressedLabel": { "type": "string" },
          "unpressedLabel": { "type": "string" }
        },
        "additionalProperties": false
      }, {
        "properties": {
          "type": { "const": "slider" }
        },
        "additionalProperties": false
      }, {
        "properties": {
          "type": { "const": "color-picker" }
        },
        "additionalProperties": false
      }]
    }
  }
}
